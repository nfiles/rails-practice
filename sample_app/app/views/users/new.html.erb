<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-lg-6 col-lg-offset-3">
    <%= form_tag(users_path, method: "post") do %>

    <%= render 'shared/error_messages' %>
  
    <div class="form-group">
      <%= label_tag :name %>
      <%= text_field_tag :name, nil, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= label_tag :email %>
      <%= text_field_tag :email, nil, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= label_tag :password %>
      <%= password_field_tag :password, nil, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= label_tag :password_confirmation, "Confirmation" %>
      <%= password_field_tag :password_confirmation, nil, class: "form-control" %>
    </div>

    <%= submit_tag "Create my account", class: "btn btn-large btn-primary" %>

    <% end %>
  </div>
</div>
